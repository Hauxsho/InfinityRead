<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.noobdevs.infinityread">

    <uses-permission android:name="android.permission.ACCESS_BACKGROUND_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.InfinityRead">
        <activity android:name=".LSPermission"/>
        <activity
            android:name=".DM"
            android:launchMode="singleTop"/>
        <activity
            android:name=".Homepage"
            android:launchMode="singleTop" />
        <activity
            android:name=".Add"
            android:launchMode="singleTop" />
        <activity
            android:name=".Profile"
            android:launchMode="singleTop" />
        <activity
            android:name=".Interests"
            android:launchMode="singleTop" />
        <activity
            android:name=".BookDetails"
            android:launchMode="singleTop" />
        <activity
            android:name=".Profile_Settings"
            android:launchMode="singleTop" />
        <activity
            android:name=".Profile_Info"
            android:launchMode="singleTop" />
        <activity
            android:name=".OtpVerification"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".SignIn"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>